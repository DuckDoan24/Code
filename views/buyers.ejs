        document.addEventListener('DOMContentLoaded', function() {
            const deleteButtons = document.querySelectorAll('.btn-delete');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const userId = this.getAttribute('data-user-id');
                    const fullname = this.getAttribute('data-fullname');
                    deleteBuyer(userId, fullname);
                });
            });
            
            // Modal functionality
            const modal = document.getElementById('pointsModal');
            const closeBtn = document.querySelector('.close');
            const cancelBtn = document.getElementById('cancelBtn');
            const editPointsButtons = document.querySelectorAll('.btn-edit-points');
            const submitBtn = document.getElementById('submitPointsBtn');
            
            editPointsButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const userId = this.getAttribute('data-user-id');
                    const fullname = this.getAttribute('data-fullname');
                    const currentPoints = this.getAttribute('data-current-points');
                    
