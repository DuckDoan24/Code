                const userId = document.getElementById('modal-user-id').textContent;
                const newPoints = document.getElementById('newPoints').value;
                updateBonusPoints(userId, newPoints);
            }
        });

        async function updateBonusPoints(userId, newPoints) {
            try {
                const response = await fetch('/buyers/update-points/' + userId, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ bonusPoint: newPoints })
